extends layouts/default.pug

block variables
	- const title = "Dashboard"
	- active = "Dashboard"

block content
	if(user.admin) 
		h3.mb-6 #[a(href="/class/add") Add Classes] | #[a(href="/hw/add") Add Homework]
	.flex.justify-center.items-baseline.flex-wrap.flex-wrap-reverse
		h1.mb-6.mr-auto Your Progress
		h3(class="mb-6 text-xl text-vermillion-600") #{user.username}
	h2.mb-3 Next Class
	if lesson.length
		include ./partials/mixins.pug
		+lessontable(lesson)
	else
		p You've watched all the classes!

block extra-scripts
	script(src="/js/lessonProgress.js")