extends layouts/default.pug

block variables
	- const title = "Dashboard"
	- active = "Dashboard"

block content
	if(user.admin) 
		h3.mb-6 #[a(href="/class/add") Add Classes] | #[a(href="/hw/add") Add Homework]

	h1.mb-6 Your Progress

	h2.mb-3 Next Class
	if lesson.length
		include ./partials/mixins.pug
		+lessontable(lesson)
	else
		p You've watched all the classes!

block extra-scripts
	script(src="/js/lessonProgress.js")