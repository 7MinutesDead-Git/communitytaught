extends layouts/default.pug

block variables
	- const title = "Classes"

block content
	if (!loggedIn)
		div YOU ARE NOT CURRENTLY LOGGED IN. If you would like to track your progress, please #[a(href="/login") log in] or #[a(href="/register") register] before continuing.

	h1 All Classes

	table
		thead
			tr
				th Class
				if (loggedIn)
					th Done
				th Video
				th Check In
		tbody
			each lesson in lessons
				tr
					td #{lesson.classNo}
					if (loggedIn)
						td
							input.watched(type="checkbox" id="watched-" + lesson._id autocomplete="off" checked=lesson.watched) 
							label(id="watched-" + lesson._id) Watched
							br
							input.checkedin(type="checkbox" id="checkedin-" + lesson._id autocomplete="off" checked=lesson.checkedIn)
							label(for="checkedin-" + lesson._id) Checked In
					td 
						a(href=lesson.permalink)
							img(src=lesson.thumbnail width=200)
							| #{lesson.title}
					td 
						a(href=lesson.checkin) Check In

block extra-scripts
	script(src="/js/lessonProgress.js")